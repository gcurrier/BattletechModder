<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.battletech.modder.view.RootLayoutController">
   <top>
      <MenuBar layoutY="2.0">
        <menus>
          <Menu mnemonicParsing="false" text="Directory">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleOpenDirectory" text="Open..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#handleExitApp" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Charts">
            <items>
                  <Menu mnemonicParsing="false" text="Weapons">
                    <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleWpnDmgChart" text="Damage" />
                        <MenuItem mnemonicParsing="false" onAction="#handleWpnRngChart" text="Ranges" />
                    </items>
                  </Menu>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <Label fx:id="labelConfigDir" text="Label" BorderPane.alignment="BOTTOM_LEFT">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </Label>
   </bottom>
</BorderPane>
